{
    "name": "@hookun/vlq",
    "publishConfig": {
        "access": "public"
    },
    "description": "A tool to encode/decode arbitrary unsigned integers using predefined-length chunk of bits.",
    "repository": {
        "type": "git",
        "url": "https://github.com/hookun/vlq"
    },
    "version": "0.0.8",
    "license": "Apache-2.0",
    "author": {
        "name": "Hookun",
        "email": "hookhookun@gmail.com",
        "url": "https://github.com/hookun"
    },
    "engines": {
        "node": ">=10"
    },
    "type": "module",
    "main": "lib/index.mjs",
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "tsc",
        "lint": "eslint --ext .mts src",
        "test": "ava",
        "preversion": "run-s preversion:*",
        "preversion:doc": "npx typedoc src/index.ts",
        "preversion:stage": "git add ."
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "ava": "^5.1.1",
        "eslint": "^8.5.0",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.4.0",
        "typedoc": "^0.23.24",
        "typedoc-plugin-markdown": "^3.11.8",
        "typescript": "^4.5.4"
    },
    "ava": {
        "extensions": {
            "mts": "module"
        },
        "nodeArguments": [
            "--loader=ts-node/esm"
        ]
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "env": {
            "es6": true
        },
        "rules": {
            "quotes": "off",
            "semi": "off",
            "@typescript-eslint/semi": "error",
            "@typescript-eslint/quotes": [
                "error",
                "single"
            ],
            "@typescript-eslint/member-delimiter-style": [
                "error",
                {
                    "multiline": {
                        "delimiter": "comma",
                        "requireLast": true
                    },
                    "singleline": {
                        "delimiter": "comma",
                        "requireLast": false
                    }
                }
            ]
        }
    }
}
